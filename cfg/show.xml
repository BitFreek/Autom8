<BrimstoneHayride>
	<scenes>
		<reset>
			<triggers>
				<receive-rf>0</receive-rf>
                <button>reset</button>
			</triggers>
			<effects>
				<reset-show></reset-show>
                <relay name="steplight">on</relay>
                <relay name="redlightstrip">on</relay>
                <relay name="greenlightstrip">on</relay>
                <relay name="bluelightstrip">on</relay>
			</effects>
		</reset>
        <welcome>
            <triggers>
                <recieive-rf>1</recieive-rf>
                <button>welcome</button>
            </triggers>
            <effects>
                <play-audio>welcome.mp3</play-audio>
            </effects>
        </welcome>
        <castle>
            <triggers>
                <recieive-rf>2</recieive-rf>
            </triggers>
            <effects>
                <play-audio>castle.mp3</play-audio>
                <send-rf duration="3">100</send-rf>
                <send-rf delay="30" duration="3">101</send-rf>
            </effects>
        </castle>
	</scenes>
</BrimstoneHayride>