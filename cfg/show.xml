<BrimstoneHayride>
	<scenes>
		<Reset>
			<triggers>
				<recieve-signal>
					0
				</recieve-signal>
			</triggers>
			<effects>
				<relay-on>
					Relay1
				</relay-on>
				<reset-show></reset-show>
			</effects>
		</Reset>
		<Rules>
			<triggers>
				<button-push>
					Button1
				</button-push>
				<recieve-signal>
					1
				</recieve-signal>
			</triggers>
			<effects>
				<play-audio>
					welcome.mp3
				</play-audio>
				<relay-off>
					Relay1
				</relay-off>
			</effects>
		</Rules>
		<Castle>
			<triggers>
				<recieve-signal>
					2
				</recieve-signal>
			</triggers>
			<effects>
				<play-audio>
					castle.mp3
				</play-audio>
				<send-signal delay="15000">
					100
				</send-signal>
				<relay-strobe on-signal="101">
					Relay2
				</relay-strobe>
				<relay-flash on-signal="101">
					Relay1
				</relay-flash>
			</effects>
		</Castle>
		<Gallows>
			<triggers>
				<recieve-signal>
					3
				</recieve-signal>
			</triggers>
			<effects>
				<play-audio>
					gallows.mp3
				</play-audio>
			</effects>
		</Gallows>
	</scenes>
</BrimstoneHayride>